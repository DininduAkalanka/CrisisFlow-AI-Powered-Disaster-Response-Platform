# Application
APP_NAME=CrisisFlow
DEBUG=True
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/crisisflow

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# AI Models
AI_MODELS_DIR=./models
IMAGE_MODEL_PATH=./models/image_classifier.pth
NLP_MODEL_NAME=distilbert-base-uncased

# Clustering Settings
CLUSTER_RADIUS_KM=0.5
CLUSTER_TIME_WINDOW_MINUTES=10
MIN_CLUSTER_SIZE=3

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
